<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/mc_option_bg_50"
    android:gravity="center">

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:background="@color/mc_option_item_bg"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/mc_save_item"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_weight="1.0"
            android:orientation="vertical"
            android:visibility="visible">
            <TextView
                android:id="@+id/mc_msg_save"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:textSize="@dimen/mc_txt12TextSize"
                android:text="@string/mc_menu_save"
                android:textColor="@color/mc_black" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>