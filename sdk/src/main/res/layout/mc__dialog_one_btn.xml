<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:orientation="vertical"
    android:padding="25dip">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/mc__dialog_bg">

        <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="44dip"
            android:clickable="true"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/content_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:lineSpacingExtra="10dip"
                    android:minHeight="76dip"
                    android:paddingBottom="5dip"
                    android:paddingLeft="20dip"
                    android:paddingRight="20dip"
                    android:paddingTop="15dip"
                    android:textColor="#333333"
                    android:textSize="15dp" />
            </ScrollView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dip"
            android:layout_below="@+id/content"
            android:layout_gravity="bottom"
            android:layout_marginTop="-44dip"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="@color/dialog_dark" />

            <TextView
                android:id="@+id/single_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/mc__dialog_btn_selector"
                android:gravity="center"
                android:text="@string/mc_i_see"
                android:textColor="#333333"
                android:textSize="15dp" />
        </LinearLayout>
    </RelativeLayout>

</FrameLayout>