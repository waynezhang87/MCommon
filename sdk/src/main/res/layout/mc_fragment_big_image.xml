<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <com.waynezhang.mcommon.xwidget.McTitleBar
        android:id="@+id/mc_titleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mcLeftButtonImage="@null"
        app:mcLeftButtonText="返回"
        app:mcTitleText="1/2"
        app:mcRightButtonText="删除"
        app:mcRightViewBackground="@null"/>

    <com.waynezhang.mcommon.xwidget.HackyViewPager
        android:id="@+id/mc_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>